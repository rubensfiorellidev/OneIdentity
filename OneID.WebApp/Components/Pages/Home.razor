@page "/"
@using OneID.WebApp.Components.Layout
@rendermode InteractiveServer
@layout LandingLayout
@inject NavigationManager Navigation


<style>
    .landing-body {
        margin: 0;
        background-color: #152125;
        color: white;
        font-family: 'Inter', sans-serif;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .content {
        text-align: center;
        animation: fadeIn 1.2s ease-out both;
    }

    .logo-icon {
        width: 72px;
        height: 72px;
        margin-bottom: 1.5rem;
        stroke: #00b3ff;
        animation: pulse 2s infinite ease-in-out;
        filter: drop-shadow(0 0 6px #00b3ff80);
    }


    h1 {
        font-size: 2rem;
        margin-bottom: 0.5rem;
    }

    .subtitle {
        color: #aaa;
        font-size: 1.1rem;
        margin-bottom: 2rem;
    }

    .start-button {
        background-color: #00b3ff;
        color: #152125;
        border: none;
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
        font-weight: 600;
        border-radius: 999px;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease, box-shadow 0.3s ease;
        box-shadow: 0 0 12px rgba(0, 179, 255, 0.3);
    }

        .start-button:hover {
            background-color: #00cfff !important;
            transform: scale(1.06);
            box-shadow: 0 0 16px rgba(0, 200, 255, 0.6) !important;
            color: #0a0a0a !important;
        }


</style>

<div class="landing-body">
    <div class="content">
        <svg xmlns="http://www.w3.org/2000/svg" class="logo-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1z" />
            <path d="m9 12 2 2 4-4" />
        </svg>

        <h1>Bem-vindo ao OneID</h1>
        <p class="subtitle">Sua identidade começa aqui.</p>

        <button class="start-button" @onclick="IniciarSessao">Iniciar sessão</button>
    </div>
</div>

@code {
    private void IniciarSessao()
    {
        Navigation.NavigateTo("https://localhost:5001/request-token", forceLoad: true);
    }
}
