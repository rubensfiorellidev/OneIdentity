@page "/"
@rendermode InteractiveServer
@inject NavigationManager Navigation

<style>
    body {
        margin: 0;
        background-color: #343541;
        color: white;
        font-family: 'Segoe UI', sans-serif;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .content {
        text-align: center;
    }

    h1 {
        font-size: 2rem;
        margin-bottom: 0.5rem;
    }

    .subtitle {
        color: #aaa;
        font-size: 1.1rem;
        margin-bottom: 2rem;
    }

    .start-button {
        background-color: #40414f;
        color: #ddd;
        border: 1px solid #666;
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
        border-radius: 999px;
        cursor: pointer;
        transition: background-color 0.2s ease;
    }

        .start-button:hover {
            background-color: #555;
        }
</style>

<div class="content">
    <h1>Bem-vindo ao OneID</h1>
    <p class="subtitle">Sua identidade começa aqui.</p>

    <button class="start-button" @onclick="IniciarSessao">Iniciar sessão</button>
</div>

@code {
    private void IniciarSessao()
    {
        Navigation.NavigateTo("https://localhost:5001/request-token", forceLoad: true);
    }
}
