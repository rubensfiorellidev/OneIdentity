@inject NavigationManager Navigation

@if (IsVisible)
{
    <div class="service-launcher-overlay" @onclick="Toggle">
        <div class="service-launcher-panel" @onclick:stopPropagation>
            <div class="launcher-container">
                <a href="/manual-admission" class="launcher-item">➕ Nova Admissão</a>
                <a href="/ongoing-processes" class="launcher-item">📄 Processos em andamento</a>
                <a href="/usuarios" class="launcher-item">👥 Usuários ativos</a>
                <a href="/roles" class="launcher-item">🛡️ Gerenciar roles</a>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public EventCallback Toggle { get; set; }

    private void NavigateTo(string url)
    {
        Toggle.InvokeAsync(); // Fecha o launcher ao navegar
        Navigation.NavigateTo(url);
    }
}
