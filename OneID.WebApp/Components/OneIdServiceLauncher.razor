@inject NavigationManager Navigation

@if (IsVisible)
{
    <div class="service-launcher-overlay" @onclick="Toggle">
        <div class="service-launcher-panel" @onclick:stopPropagation>
            <div class="service-launcher-left">
                <div class="launcher-section-title">Serviços</div>
                <ul class="launcher-menu">
                    <li @onclick="@(() => NavigateTo("/manual-admission"))">➕ Nova Admissão</li>
                    <li @onclick="@(() => NavigateTo("/ongoing-processes"))">📄 Processos em andamento</li>
                    <li @onclick="@(() => NavigateTo("/active-users"))">👥 Usuários ativos</li>
                    <li @onclick="@(() => NavigateTo("/roles"))">🛡️ Gerenciar roles</li>
                </ul>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public EventCallback Toggle { get; set; }

    private void NavigateTo(string url)
    {
        Toggle.InvokeAsync(); // Fecha o launcher ao navegar
        Navigation.NavigateTo(url);
    }
}
