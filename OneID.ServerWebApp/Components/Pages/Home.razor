@page "/"
@rendermode InteractiveServer
@inject NavigationManager Navigation

<div class="landing-container">
    <div class="content">
        <h1>Bem-vindo ao OneID</h1>
        <p class="subtitle">Sua identidade começa aqui.</p>

        <button class="start-button" @onclick="GoToToken">
            Iniciar sessão
        </button>
    </div>
</div>

<style>
    .landing-container {
        background-color: #343541;
        color: white;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: 'Segoe UI', sans-serif;
    }

    .content {
        text-align: center;
    }

    .subtitle {
        margin-top: 0.5rem;
        color: #aaa;
        font-size: 1.1rem;
    }

    .start-button {
        margin-top: 2rem;
        background-color: #40414f;
        color: #ddd;
        border: 1px solid #666;
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
        border-radius: 999px;
        cursor: pointer;
        transition: background-color 0.2s ease;
    }

        .start-button:hover {
            background-color: #555;
        }
</style>

@code {
    private void GoToToken()
    {
        Navigation.NavigateTo("/request-token");
    }
}
