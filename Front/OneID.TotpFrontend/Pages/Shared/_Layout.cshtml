<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OneID</title>

    <!-- Fonte Inter -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />

    <!-- Seu tema personalizado -->
    <link rel="stylesheet" href="~/css/oneid-theme.css" asp-append-version="true" />

    <!-- Se ainda for usar Bootstrap (opcional) -->
    <!-- <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> -->
</head>
<body>
    <header>
        <nav style="padding: 1rem 2rem; background-color: #1b1c1d; border-bottom: 1px solid var(--card-border); color: var(--text-color); display: flex; align-items: center; justify-content: space-between;">
            <div>
                <a href="/" style="color: var(--highlight-color); font-weight: 600; font-size: 1.2rem;">OneID</a>
            </div>
            <div>
                <a href="/" style="margin-right: 1.5rem; color: var(--text-muted); font-weight: 500;">Início</a>
                <a href="/privacy" style="color: var(--text-muted); font-weight: 500;">Privacidade</a>
            </div>
        </nav>
    </header>

    <main class="content">
        @RenderBody()
    </main>

    <footer style="padding: 1rem 2rem; text-align: center; color: var(--text-muted); font-size: 0.9rem; border-top: 1px solid var(--card-border); margin-top: 3rem;">
        &copy; 2025 - OneID
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
