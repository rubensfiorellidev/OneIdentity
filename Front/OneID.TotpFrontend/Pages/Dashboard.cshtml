@page "/dashboard"
@model DashboardModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>Dashboard</title>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">

    <style>
        :root {
            --font-main: 'Inter', 'Segoe UI', 'Noto Sans', sans-serif;
            --font-size: 15px;
            --font-weight: 400;
            --text-color: #f3f4f6;
            --text-muted: #aaa;
            --background-color: #1b1c1d;
            --highlight-color: #38bdf8;
            --link-hover-color: #66f0f1;

            --btn-bg: #2c2f3a;
            --btn-hover: #37475a;
            --btn-border: #3a4553;
            --card-bg: #212121;
            --card-border: #3a4553;
            --row-hover: #2e3b4e;
            --grid-border: #3a4553;
            --resume-btn-bg: #1e293b;
            --resume-btn-hover: #334155;
        }

        a {
            color: var(--highlight-color);
            text-decoration: none;
            font-weight: 600;
            transition: color 0.3s ease;
        }

            a:hover {
                color: var(--link-hover-color);
            }

        body {
            font-family: var(--font-main);
            font-weight: var(--font-weight);
            font-size: var(--font-size);
            color: var(--text-color);
            background-color: var(--background-color);
            line-height: 1.5;
            margin: 0;
            padding: 0;
        }

        .container {
            text-align: center;
            margin-top: 3rem;
        }

        h1 {
            font-size: 2rem;
            margin-bottom: 0.5rem;
            font-weight: 600;
        }

        .info {
            margin-bottom: 1rem;
            color: var(--text-muted);
        }

        .roles {
            margin-top: 1.5rem;
            color: var(--highlight-color);
        }

        ul {
            list-style: none;
            padding: 0;
        }

        li {
            margin: 0.3rem 0;
        }

        .action-btn {
            display: inline-block;
            margin-top: 2rem;
            padding: 0.75rem 1.5rem;
            background-color: var(--btn-bg);
            color: white;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
            transition: background-color 0.3s ease;
            border: 1px solid var(--btn-border);
        }

            .action-btn:hover {
                background-color: var(--btn-hover);
            }

        .container-table {
            margin: 3rem auto;
            width: 90%;
            max-width: 1600px;
        }

        .pending-section {
            background-color: var(--card-bg);
            padding: 2rem;
            border-radius: 12px;
            border: 1px solid var(--card-border);
        }

            .pending-section h2 {
                margin-bottom: 1rem;
                color: var(--highlight-color);
                font-size: 1.4rem;
                font-weight: 600;
            }

            .pending-section table {
                width: 100%;
                border-collapse: collapse;
                font-size: 14px;
            }

            .pending-section th,
            .pending-section td {
                padding: 8px 12px;
                text-align: left;
                border-bottom: 1px solid var(--grid-border);
            }

            .pending-section tr:hover {
                background-color: var(--row-hover);
            }

            .pending-section button {
                background-color: transparent;
                color: var(--highlight-color);
                border: none;
                padding: 0;
                font-size: 14px;
                font-weight: 600;
                cursor: pointer;
                transition: color 0.3s ease;
            }

                .pending-section button:hover {
                    color: var(--link-hover-color);
                }

        .external-link {
            color: var(--highlight-color);
            text-decoration: none;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            transition: color 0.2s ease;
            border: none;
            background: none;
            font-size: 15px;
            padding: 0;
        }

            .external-link:hover {
                color: var(--link-hover-color, #67e8f9);
            }

    </style>
</head>

<body>
    <div class="container">
        <h1>Bem-vindo, @Model.OperatorName!</h1>
        <div class="info">Email: @Model.Email</div>

        @if (Model.Roles?.Any() == true)
        {
            <div class="roles">
                <strong>Suas Roles:</strong>
                <ul>
                    @foreach (var role in Model.Roles)
                    {
                        <li>@role</li>
                    }
                </ul>
            </div>
        }
        else
        {
            <div class="roles">Nenhuma role atribuída.</div>
        }

        <a href="/manual-admission" class="external-link" target="_blank" rel="noopener noreferrer">
            Iniciar Nova Admissão
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" width="14" height="14" style="margin-left: 6px;">
                <path fill-rule="evenodd" d="M12.293 2.293a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L14 5.414V13a1 1 0 11-2 0V5.414l-2.293 2.293A1 1 0 018.293 6.293l4-4z" clip-rule="evenodd" />
                <path fill-rule="evenodd" d="M3 9a1 1 0 011-1h6a1 1 0 110 2H5v6a1 1 0 11-2 0V9z" clip-rule="evenodd" />
            </svg>
        </a>

    </div>

    @if (Model.PendingProcesses?.Any() == true)
    {
        <div class="container-table">
            <div class="pending-section">
                <h2>Processos pendentes de confirmação</h2>
                <table>
                    <thead>
                        <tr>
                            <th>Nome Completo</th>
                            <th>Data de Criação</th>
                            <th style="text-align: center;">Ação</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.PendingProcesses)
                        {
                            <tr>
                                <td>@item.FullName</td>
                                <td>@item.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                                <td style="text-align: center;">
                                    <form method="post" asp-page-handler="Resume">
                                        <input type="hidden" name="correlationId" value="@item.CorrelationId" />
                                        <button type="submit">🔄 Retomar</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</body>
</html>
