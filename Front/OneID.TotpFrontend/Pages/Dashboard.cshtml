@page "/dashboard"
@model DashboardModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>OneID - Dashboard</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />

    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: #343541;
            color: white;
            font-family: 'Inter', sans-serif;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: flex-start;
            min-height: 100vh;
            padding-top: 3rem;
        }

        .container {
            text-align: center;
            width: 100%;
            max-width: 800px;
            padding: 0 1rem;
        }

        h1 {
            font-size: 1.8rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .info {
            color: #aaa;
            font-size: 1rem;
            margin-bottom: 1.5rem;
        }

        .roles {
            margin-bottom: 2rem;
        }

            .roles strong {
                color: #38bdf8;
                font-weight: 600;
            }

            .roles ul {
                list-style: none;
                padding: 0;
                margin-top: 0.5rem;
            }

            .roles li {
                color: #ccc;
                font-size: 0.95rem;
            }

        .admission-link {
            display: inline-flex;
            align-items: center;
            margin-bottom: 2rem;
            color: #38bdf8;
            text-decoration: none;
            font-weight: 600;
        }

            .admission-link:hover {
                color: #66f0f1;
            }

        .pending-widget {
            background-color: #40414f;
            padding: 1.5rem;
            border-radius: 12px;
            width: 100%;
            box-shadow: 0 0 3px #00000055;
        }

            .pending-widget h2 {
                font-size: 1.2rem;
                font-weight: 600;
                color: #38bdf8;
                margin-bottom: 1rem;
            }

            .pending-widget ul {
                list-style: none;
                padding: 0;
                margin: 0;
            }

            .pending-widget li {
                display: flex;
                justify-content: space-between;
                align-items: center;
                padding: 8px 0;
                border-bottom: 1px solid #555;
            }

                .pending-widget li:last-child {
                    border-bottom: none;
                }

        .resume-button {
            background-color: transparent;
            border: none;
            color: #38bdf8;
            font-weight: 600;
            cursor: pointer;
            transition: color 0.2s ease;
            font-size: 0.95rem;
        }

            .resume-button:hover {
                color: #66f0f1;
            }

        .footer-link {
            display: block;
            text-align: right;
            margin-top: 1rem;
            font-size: 0.9rem;
            color: #999;
        }

            .footer-link:hover {
                color: #66f0f1;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Bem-vindo, @Model.OperatorName!</h1>
        <div class="info">Email: @Model.Email</div>

        @if (Model.Roles?.Any() == true)
        {
            <div class="roles">
                <strong>Suas Roles:</strong>
                <ul>
                    @foreach (var role in Model.Roles)
                    {
                        <li>@role</li>
                    }
                </ul>
            </div>
        }

        <a href="/manual-admission" class="admission-link" target="_blank">
            Iniciar Nova Admissão ⤴
        </a>

        @if (Model.PendingProcesses?.Any() == true)
        {
            <div class="pending-widget">
                <h2>Processos pendentes de confirmação</h2>
                <ul>
                    @{
                        var expandGrid = (bool?)ViewData["ExpandGrid"] ?? false;
                        var processes = expandGrid ? Model.PendingProcesses : Model.PendingProcesses.Take(5);
                    }

                    @foreach (var item in processes)
                    {
                        <li>
                            <span>@item.FullName</span>
                            <form method="post" asp-page-handler="Resume" style="margin: 0;">
                                <input type="hidden" name="correlationId" value="@item.CorrelationId" />
                                <button type="submit" class="resume-button">Retomar</button>
                            </form>
                        </li>
                    }
                </ul>

                @if (!expandGrid)
                {
                    <a href="/dashboard?expand=true" class="footer-link" target="_blank">Ver todos ⤴</a>
                }
            </div>
        }
    </div>
</body>
</html>
