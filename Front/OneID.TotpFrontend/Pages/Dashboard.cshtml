@page "/dashboard"
@model DashboardModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>Dashboard</title>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">

    <style>
        :root {
            --font-main: 'Inter', 'Segoe UI', 'Noto Sans', sans-serif;
            --font-size: 15px;
            --font-weight: 400;
            --text-color: #f3f4f6;
            --text-muted: #aaa;
            --background-color: #1b1c1d;
            --highlight-color: #38bdf8;
            --link-hover-color: #66f0f1;
            --btn-bg: #2c2f3a;
            --btn-hover: #37475a;
            --btn-border: #3a4553;
            --card-bg: #212121;
            --card-border: #3a4553;
            --row-hover: #2e3b4e;
            --grid-border: #3a4553;
            --resume-btn-bg: #1e293b;
            --resume-btn-hover: #334155;
        }

        a {
            color: var(--highlight-color);
            text-decoration: none;
            font-weight: 600;
            transition: color 0.3s ease;
        }

            a:hover {
                color: var(--link-hover-color);
            }

        body {
            font-family: var(--font-main);
            font-weight: var(--font-weight);
            font-size: var(--font-size);
            color: var(--text-color);
            background-color: var(--background-color);
            line-height: 1.5;
            margin: 0;
            padding: 0;
        }

        .container {
            text-align: center;
            margin-top: 3rem;
        }

        h1 {
            font-size: 2rem;
            margin-bottom: 0.5rem;
            font-weight: 600;
        }

        .info {
            margin-bottom: 1rem;
            color: var(--text-muted);
        }

        .roles {
            margin-top: 1.5rem;
            color: var(--highlight-color);
        }

        ul {
            list-style: none;
            padding: 0;
        }

        li {
            margin: 0.3rem 0;
        }

        .container-table {
            margin: 3rem auto;
            width: 90%;
            max-width: 1600px;
        }

        .pending-widget {
            background-color: var(--card-bg);
            padding: 1.5rem;
            border-radius: 12px;
            border: 1px solid var(--card-border);
            text-align: left;
        }

            .pending-widget h2 {
                margin-bottom: 0.5rem;
                font-size: 1.3rem;
                color: var(--highlight-color);
            }

            .pending-widget ul {
                list-style: none;
                padding-left: 0;
            }

            .pending-widget li {
                display: flex;
                justify-content: space-between;
                align-items: center;
                padding: 6px 0;
                border-bottom: 1px solid var(--grid-border);
            }

                .pending-widget li:last-child {
                    border-bottom: none;
                }

            .pending-widget .resume-button {
                font-size: 13px;
                color: var(--highlight-color);
                background: none;
                border: none;
                cursor: pointer;
                font-weight: 600;
                transition: color 0.2s ease;
            }

                .pending-widget .resume-button:hover {
                    color: var(--link-hover-color);
                }


            .pending-widget .footer-link {
                display: block;
                margin-top: 1rem;
                text-align: right;
                font-size: 14px;
            }

        .external-link {
            color: var(--highlight-color);
            text-decoration: none;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            transition: color 0.2s ease;
            border: none;
            background: none;
            font-size: 15px;
            padding: 0;
        }

            .external-link:hover {
                color: var(--link-hover-color);
            }

    </style>
</head>
<body>
    <div class="container">
        <h1>Bem-vindo, @Model.OperatorName!</h1>
        <div class="info">Email: @Model.Email</div>

        @if (Model.Roles?.Any() == true)
        {
            <div class="roles">
                <strong>Suas Roles:</strong>
                <ul>
                    @foreach (var role in Model.Roles)
                    {
                        <li>@role</li>
                    }
                </ul>
            </div>
        }
        else
        {
            <div class="roles">Nenhuma role atribuída.</div>
        }

        <a href="/manual-admission" class="external-link" target="_blank" rel="noopener noreferrer">
            Iniciar Nova Admissão
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" width="14" height="14" style="margin-left: 6px;">
                <path fill-rule="evenodd" d="M12.293 2.293a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L14 5.414V13a1 1 0 11-2 0V5.414l-2.293 2.293A1 1 0 018.293 6.293l4-4z" clip-rule="evenodd" />
                <path fill-rule="evenodd" d="M3 9a1 1 0 011-1h6a1 1 0 110 2H5v6a1 1 0 11-2 0V9z" clip-rule="evenodd" />
            </svg>
        </a>
    </div>

    @if (Model.PendingProcesses?.Any() == true)
    {
        <div class="container-table">
            <div class="pending-widget">
                <h2>Processos pendentes de confirmação</h2>
                <ul>
                    @{
                        var expandGrid = (bool?)ViewData["ExpandGrid"] ?? false;
                        var processes = expandGrid ? Model.PendingProcesses : Model.PendingProcesses.Take(5);
                    }

                    @foreach (var item in processes)
                    {
                        <li>
                            <span>@item.FullName</span>
                            <form method="post" asp-page-handler="Resume" style="margin: 0;">
                                <input type="hidden" name="correlationId" value="@item.CorrelationId" />
                                <button type="submit" class="resume-button">Retomar</button>
                            </form>
                        </li>
                    }
                </ul>
                @if (!expandGrid)
                {
                    <a href="/dashboard?expand=true" target="_blank" class="footer-link">Ver todos ⤴</a>
                }
            </div>
        </div>
    }

</body>
</html>
