@page "/dashboard"
@model DashboardModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>OneID - Dashboard</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />
    <style>
        :root {
            --font-main: 'Inter', sans-serif;
            --text-color: #f3f4f6;
            --text-muted: #aaa;
            --background-color: #1b1c1d;
            --highlight-color: #38bdf8;
            --link-hover-color: #66f0f1;
            --card-bg: #212121;
            --card-border: #3a4553;
            --divider: #3a455360;
        }

        body {
            margin: 0;
            padding: 2rem;
            background-color: var(--background-color);
            color: var(--text-color);
            font-family: var(--font-main);
        }

        .top-bar {
            display: flex;
            justify-content: flex-end;
            margin-bottom: 1rem;
            font-size: 0.95rem;
            color: var(--text-muted);
        }

        .grid-layout {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: 2rem;
        }

        .widget, .pending-widget {
            background-color: var(--card-bg);
            border: 1px solid var(--card-border);
            border-radius: 10px;
            padding: 1.5rem;
        }

        .account-id-widget label {
            font-weight: 600;
            display: block;
            margin-bottom: 0.5rem;
        }

        .copyable-id {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: var(--text-color);
        }

            .copyable-id svg {
                width: 16px;
                height: 16px;
                fill: var(--highlight-color);
                cursor: pointer;
            }

        .divider {
            height: 1px;
            background-color: var(--divider);
            margin-top: 1rem;
        }

        .pending-widget h2,
        .widget h2 {
            font-size: 1.1rem;
            margin-bottom: 0.75rem;
            color: var(--highlight-color);
        }

        .pending-widget ul,
        .widget ul {
            list-style: none;
            padding-left: 0;
            margin: 0;
        }

        .pending-widget li {
            display: flex;
            justify-content: space-between;
            padding: 0.5rem 0;
            border-bottom: 1px solid var(--divider);
        }

        .resume-button {
            background: none;
            border: none;
            color: var(--highlight-color);
            cursor: pointer;
            font-weight: 600;
            font-size: 0.9rem;
        }

            .resume-button:hover {
                color: var(--link-hover-color);
            }

        .footer-link {
            display: block;
            margin-top: 1rem;
            text-align: right;
            font-size: 0.85rem;
            color: var(--text-muted);
        }

            .footer-link:hover {
                color: var(--highlight-color);
            }
    </style>
</head>
<body>
    <div style="display: flex; justify-content: space-between; padding: 1.5rem 2rem 0;">
        <div style="color: var(--highlight-color); font-weight: 600; font-size: 1.4rem;">
            OneID
        </div>
        <div class="copyable-id" style="color: var(--text-muted); font-size: 0.9rem; display: flex; align-items: center; gap: 0.5rem;">
            <span>Conta: @Model.AccountId</span>
            <svg onclick="copyToClipboard('@Model.AccountId')" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" style="width: 16px; height: 16px; fill: var(--highlight-color); cursor: pointer;">
                <path d="M16 1H4a2 2 0 0 0-2 2v14h2V3h12V1zm3 4H8a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h11a2 2 0 0 0 2-2V7a2 2 0 0 0-2-2zm0 16H8V7h11v14z" />
            </svg>
        </div>
    </div>

    <div class="container-table" style="display: flex; gap: 2rem; align-items: flex-start;">
        <!-- Widget de Processos Pendentes -->
        <div class="pending-widget" style="flex: 1;">
            <h2>Processos pendentes de confirmação</h2>
            <ul>
                @{
                    var expandGrid = (bool?)ViewData["ExpandGrid"] ?? false;
                    var processes = expandGrid ? Model.PendingProcesses : Model.PendingProcesses.Take(5);
                }

                @foreach (var item in processes)
                {
                    <li>
                        <div style="display: flex; flex-direction: column;">
                            <span>@item.FullName</span>
                            <div style="font-size: 0.75rem; color: var(--text-muted); display: flex; align-items: center; gap: 0.4rem;">
                                <span>@item.CorrelationId</span>
                                <svg onclick="copyToClipboard('@item.CorrelationId')" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" style="width: 14px; height: 14px; fill: var(--highlight-color); cursor: pointer;">
                                    <path d="M16 1H4a2 2 0 0 0-2 2v14h2V3h12V1zm3 4H8a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h11a2 2 0 0 0 2-2V7a2 2 0 0 0-2-2zm0 16H8V7h11v14z" />
                                </svg>
                            </div>
                        </div>
                        <form method="post" asp-page-handler="Resume" style="margin: 0;">
                            <input type="hidden" name="correlationId" value="@item.CorrelationId" />
                            <button type="submit" class="resume-button">Retomar</button>
                        </form>

                    </li>
                }
            </ul>
            @if (!expandGrid)
            {
                <a href="/dashboard?expand=true" class="footer-link">Ver todos ⤴</a>
            }
        </div>

        <!-- Widget de Saúde -->
        <div class="pending-widget" style="flex: 1;">
            <h2>Status do OneID</h2>
            <ul>
                <li>
                    <span>Autenticação</span>
                    <span style="color: #10b981;">Online</span>
                </li>
                <li>
                    <span>Provisionamento</span>
                    <span style="color: #10b981;">Online</span>
                </li>
                <li>
                    <span>Comunicação externa</span>
                    <span style="color: #10b981;">Online</span>
                </li>
            </ul>
            <div style="margin-top: 1rem; font-size: 0.85rem; color: var(--text-muted); text-align: right;">
                Última verificação: @DateTime.UtcNow.ToLocalTime().ToString("HH:mm:ss")
            </div>
        </div>
    </div>

    <script>
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(() => {
                alert("ID da conta copiado: " + text);
            });
        }
    </script>

</body>

</html>
