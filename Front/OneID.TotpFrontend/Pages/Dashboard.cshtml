@page "/dashboard"
@model DashboardModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>Dashboard</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=JetBrains+Mono:wght@400;600&display=swap" rel="stylesheet">
    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: #343541;
            color: white;
            font-family: 'JetBrains Mono', 'Inter', system-ui, sans-serif;
            font-size: 14px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .container {
            text-align: center;
            margin-top: 3rem;
        }

        h1 {
            font-size: 2rem;
            margin-bottom: 0.5rem;
        }

        .info {
            margin-bottom: 1rem;
            color: #aaa;
        }

        .roles {
            margin-top: 1.5rem;
            color: #90ee90;
        }

        ul {
            list-style: none;
            padding: 0;
        }

        li {
            margin: 0.3rem 0;
        }

        .action-btn {
            display: inline-block;
            margin-top: 2rem;
            padding: 0.75rem 1.5rem;
            background-color: #565869;
            color: white;
            border-radius: 8px;
            text-decoration: none;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

            .action-btn:hover {
                background-color: #6b6d7c;
            }

        .container-table {
            margin-top: 2rem;
            width: 95%;
            max-width: 2000px;
        }

        .pending-section {
            background-color: #444654;
            padding: 1.5rem;
            border-radius: 10px;
            text-align: left;
        }

            .pending-section h2 {
                margin-bottom: 1rem;
                color: #90ee90;
            }

            .pending-section table {
                width: 100%;
                border-collapse: collapse;
                color: white;
            }

            .pending-section th,
            .pending-section td {
                border: 1px solid #666;
                padding: 0.4rem 0.6rem;
                text-align: left;
                vertical-align: middle;
            }

                .pending-section th:last-child,
                .pending-section td:last-child {
                    text-align: center;
                    width: 100px;
                }

            .pending-section tr:hover {
                background-color: #2c2f3a;
            }

            .pending-section button {
                background-color: #1e293b;
                color: #38bdf8;
                border: none;
                padding: 4px 10px;
                border-radius: 999px;
                cursor: pointer;
                font-size: 13px;
                font-weight: 600;
                transition: background-color 0.3s ease;
            }

                .pending-section button:hover {
                    background-color: #2e3b4e;
                }
    </style>
</head>

<body>
    <div class="container">
        <h1>Bem-vindo, @Model.OperatorName!</h1>
        <div class="info">Email: @Model.Email</div>

        @if (Model.Roles?.Any() == true)
        {
            <div class="roles">
                <strong>Suas Roles:</strong>
                <ul>
                    @foreach (var role in Model.Roles)
                    {
                        <li>@role</li>
                    }
                </ul>
            </div>
        }
        else
        {
            <div class="roles">Nenhuma role atribuída.</div>
        }

        <a href="/manual-admission" class="action-btn">
            Iniciar Nova Admissão
        </a>
    </div>

    @if (Model.PendingProcesses?.Any() == true)
    {
        <div class="container-table">
            <div class="pending-section">
                <h2>Processos pendentes de confirmação</h2>
                <table>
                    <thead>
                        <tr>
                            <th>Nome Completo</th>
                            <th>Data de Criação</th>
                            <th>Ação</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.PendingProcesses)
                        {
                            <tr>
                                <td>@item.FullName</td>
                                <td>@item.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    <form method="post" asp-page-handler="Resume">
                                        <input type="hidden" name="correlationId" value="@item.CorrelationId" />
                                        <button type="submit">🔄 Retomar</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</body>
</html>
