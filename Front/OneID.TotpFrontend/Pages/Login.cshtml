@page "/login"
@model LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>OneID - Login</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />
    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: #152125;
            color: #f3f3f3;
            font-family: 'Inter', sans-serif;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .container {
            text-align: center;
            width: 100%;
            max-width: 700px;
            padding: 0 1rem;
        }

        .header h1 {
            font-size: 1.6rem;
            font-weight: 600;
            color: #f1f1f1;
            margin-bottom: 1.5rem;
        }

        .input-container {
            display: flex;
            align-items: center;
            background-color: #2a2f32;
            border: 1px solid #3c454a;
            padding: 0.65rem 1rem;
            border-radius: 12px;
            width: 100%;
            transition: border 0.2s ease;
            margin-bottom: 1rem;
        }

            .input-container:focus-within {
                border-color: #00b3ff;
            }

        input[type='text'],
        input[type='password'] {
            flex: 1;
            background-color: transparent;
            border: none;
            color: white;
            font-size: 1.1rem;
            font-weight: 500;
            outline: none;
            padding: 0.75rem 1rem;
            text-align: center;
        }

        input::placeholder {
            color: #c2c2c2;
            font-weight: 300;
        }

        button {
            background-color: #00b3ff;
            border: none;
            color: #152125;
            padding: 0.6rem 0.75rem;
            border-radius: 50%;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-left: 0.75rem;
            box-shadow: 0 0 10px rgba(0, 179, 255, 0.5);
            transition: all 0.3s ease;
        }

            button:hover {
                background-color: #00cfff;
                box-shadow: 0 0 15px rgba(0, 200, 255, 0.7);
                transform: scale(1.05);
                color: #0a0a0a;
            }

        .result {
            margin-top: 1rem;
            text-align: center;
            color: #ffaaaa;
        }

        .header svg:hover {
            transform: rotate(2deg) scale(1.05);
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <svg xmlns="http://www.w3.org/2000/svg"
                 viewBox="0 0 24 24"
                 fill="none"
                 stroke="#00b3ff"
                 stroke-width="2"
                 stroke-linecap="round"
                 stroke-linejoin="round"
                 class="lucide lucide-globe-lock-icon"
                 style="
            width: 80px;
            height: 80px;
            margin-bottom: 3rem;
            filter: drop-shadow(0 0 10px #00b3ff);
            transition: transform 0.3s ease;
        ">
                <path d="M15.686 15A14.5 14.5 0 0 1 12 22a14.5 14.5 0 0 1 0-20 10 10 0 1 0 9.542 13" />
                <path d="M2 12h8.5" />
                <path d="M20 6V4a2 2 0 1 0-4 0v2" />
                <rect width="8" height="5" x="14" y="6" rx="1" />
            </svg>
        </div>
        <form method="post">
            @Html.AntiForgeryToken()
            <div class="input-container">
                <input type="text" name="Username" placeholder="Digite seu login" required autocomplete="off" />
            </div>
            <div class="input-container">
                <input type="password" name="Password" placeholder="Digite sua senha" required autocomplete="off" />
                <button type="submit" id="submitBtn">
                    <span id="btnIcon">
                        <svg xmlns="http://www.w3.org/2000/svg"
                             width="24" height="24"
                             viewBox="0 0 24 24"
                             fill="none"
                             stroke="currentColor"
                             stroke-width="2"
                             stroke-linecap="round"
                             stroke-linejoin="round"
                             class="lucide lucide-chevron-up">
                            <path d="m18 15-6-6-6 6" />
                        </svg>
                    </span>
                </button>
            </div>
        </form>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="result">@Model.ErrorMessage</div>
        }
    </div>
</body>
</html>
