@page "/login"
@model LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: #343541;
            color: white;
            font-family: 'Segoe UI', sans-serif;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .header {
            margin-bottom: 2rem;
            text-align: center;
        }

            .header h1 {
                font-size: 1.6rem;
                font-weight: bold;
            }

            .header p {
                color: #aaa;
                font-size: 1rem;
                margin-top: 0.5rem;
            }

        .input-container {
            display: flex;
            align-items: center;
            background-color: #40414f;
            padding: 0.75rem 1rem;
            border-radius: 20px;
            width: 100%;
            max-width: 680px;
            box-shadow: 0 0 3px #00000055;
        }

        input[type='text'],
        input[type='password'] {
            flex: 1;
            background-color: transparent;
            border: none;
            color: white;
            font-size: 1rem;
            outline: none;
            padding: 0.5rem;
        }

        input::placeholder {
            color: #999;
        }

        button {
            background-color: #40414f;
            border: 1px solid #666;
            color: #ddd;
            font-size: 1.2rem;
            padding: 0.5rem 0.75rem;
            border-radius: 50%;
            cursor: pointer;
            transition: background-color 0.2s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-left: 0.5rem;
        }

            button:hover {
                background-color: #555;
            }

        .form-group {
            margin-bottom: 1rem;
            width: 100%;
            max-width: 680px;
        }

        .result {
            margin-top: 1rem;
            text-align: center;
            color: #ffaaaa;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Bem-vindo de volta!</h1>
            <p>Digite suas credenciais para acessar o sistema</p>
        </div>
        <form method="post">
            <div class="form-group input-container">
                <input type="text" name="Username" placeholder="Digite seu login" required />
            </div>
            <div class="form-group input-container">
                <input type="password" name="Password" placeholder="Digite sua senha" required />
                <button type="submit">↑</button>
            </div>
        </form>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="result">@Model.ErrorMessage</div>
        }
    </div>
</body>
</html>
