@page "/login"
@model LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>OneID - Login</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />
    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: #152125;
            color: white;
            font-family: 'Inter', sans-serif;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .container {
            text-align: center;
            width: 100%;
            max-width: 680px;
            padding: 0 1rem;
        }

        .header h1 {
            font-size: 1.8rem;
            font-weight: 600;
        }

        .header p {
            color: #aaa;
            font-size: 1rem;
            margin-top: 0.5rem;
            margin-bottom: 2rem;
        }

        .input-container {
            display: flex;
            align-items: center;
            background-color: #40414f;
            padding: 0.75rem 1rem;
            border-radius: 20px;
            width: 100%;
            box-shadow: 0 0 3px #00000055;
            margin-bottom: 1rem;
        }

        input[type='text'],
        input[type='password'] {
            flex: 1;
            background-color: transparent;
            border: none;
            color: white;
            font-size: 1rem;
            outline: none;
            padding: 0.5rem;
        }

        input::placeholder {
            color: #999;
        }

        button {
            background-color: #40414f;
            border: 1px solid #666;
            color: #ddd;
            font-size: 1.2rem;
            padding: 0.5rem;
            border-radius: 50%;
            cursor: pointer;
            transition: background-color 0.2s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 36px;
            height: 36px;
        }

            button:hover {
                background-color: #555;
            }

        .result {
            margin-top: 1rem;
            text-align: center;
            color: #f08080;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Bem-vindo de volta!</h1>
        </div>
        <form method="post">
            @Html.AntiForgeryToken()
            <div class="input-container">
                <input type="text" name="Username" placeholder="Digite seu login" required autocomplete="off"/>
            </div>
            <div class="input-container">
                <input type="password" name="Password" placeholder="Digite sua senha" required autocomplete="off"/>
                <button type="submit">↑</button>
            </div>
        </form>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="result">@Model.ErrorMessage</div>
        }
    </div>
</body>
</html>
