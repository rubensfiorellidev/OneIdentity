@page "/request-token"
@model RequestTokenModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>Validação TOTP</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            background-color: #343541;
            color: white;
            font-family: 'Segoe UI', sans-serif;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .header {
            margin-bottom: 2rem;
            text-align: center;
        }

            .header h1 {
                font-size: 1.6rem;
                font-weight: bold;
            }

            .header p {
                color: #aaa;
                font-size: 1rem;
                margin-top: 0.5rem;
            }

        .input-container {
            display: flex;
            align-items: center;
            background-color: #40414f;
            padding: 0.75rem 1rem;
            border-radius: 20px;
            width: 800px;
            max-width: 680px;
            box-shadow: 0 0 3px #00000055;
        }

        input[type='text'] {
            flex: 1;
            background-color: transparent;
            border: none;
            color: white;
            font-size: 1rem;
            outline: none;
            padding: 0.5rem;
        }

        input::placeholder {
            color: #999;
        }

        button {
            background-color: #40414f;
            border: 1px solid #666;
            color: #ddd;
            font-size: 1.2rem;
            padding: 0.5rem 0.75rem;
            border-radius: 50%;
            cursor: pointer;
            transition: background-color 0.2s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-left: 0.5rem;
        }

            button:hover {
                background-color: #555;
            }

        .spinner {
            width: 1rem;
            height: 1rem;
            border: 2px solid white;
            border-top: 2px solid transparent;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @@keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }

        .result {
            margin-top: 1rem;
            text-align: center;
            color: #f08080;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Confirme sua identidade</h1>
            <p>Digite o código do seu aplicativo Authenticator</p>
        </div>
        <form method="post" onsubmit="handleSubmit(this)" autocomplete="off">
            <div class="input-container">
                <input type="text" name="TotpCode" placeholder="Digite o código TOTP" maxlength="6" required />
                <button type="submit" id="submitBtn">
                    <span id="btnIcon">↑</span>
                </button>
            </div>
        </form>

        @if (!string.IsNullOrEmpty(Model.ResultMessage))
        {
            <div class="result">@Model.ResultMessage</div>
        }
    </div>

    <script>
        function handleSubmit(form) {
            const btn = document.getElementById('submitBtn');
            const btnIcon = document.getElementById('btnIcon');

            btn.disabled = true;
            btnIcon.innerHTML = '<div class="spinner"></div>';
        }
    </script>
</body>
</html>
