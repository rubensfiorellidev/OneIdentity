@page "/confirm-code"
@model ConfirmModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>Confirmação de Código</title>

    <!-- ✅ Google Fonts Inter -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet" />

    <style>
        :root {
            --bg-color: #061010;
            --card-color: #111c1c;
            --text-color: #e0e0e0;
            --muted-color: #aaaaaa;
            --highlight-color: #00b3ff;
            --success-color: #00c47d;
        }

        html, body {
            margin: 0;
            padding: 0;
            background-color: var(--bg-color);
            color: var(--text-color);
            font-family: 'Inter', sans-serif;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

            body::before {
                content: "";
                position: absolute;
                width: 400px;
                height: 400px;
                background: radial-gradient(circle at center, rgba(0,179,255,0.1) 0%, transparent 70%);
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                z-index: 0;
            }

        .auth-card {
            position: relative;
            z-index: 1;
            background-color: var(--card-color);
            border-radius: 16px;
            padding: 2.5rem 2rem;
            width: 90%;
            max-width: 480px;
            box-shadow: 0 0 15px #00000050;
            text-align: center;
        }

        .logo {
            font-size: 1.8rem;
            font-weight: 700;
            color: var(--highlight-color);
            margin-bottom: 1.5rem;
        }

        h1 {
            font-size: 1.4rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        p {
            color: var(--muted-color);
            font-size: 0.95rem;
            margin-bottom: 1.5rem;
        }

        .input-container {
            display: flex;
            align-items: center;
            background-color: #1a1e1e;
            padding: 0.65rem 1rem;
            border-radius: 20px;
            box-shadow: inset 0 0 1px #2c2c2c;
        }

        input[type="text"] {
            flex: 1;
            background: transparent;
            border: none;
            color: var(--text-color);
            font-size: 1rem;
            outline: none;
            padding: 0.5rem;
        }

        input::placeholder {
            color: #666;
        }

        button {
            background-color: #1f2a2a;
            border: 1px solid #444;
            color: #ccc;
            font-size: 1rem;
            padding: 0.45rem 0.7rem;
            border-radius: 50%;
            cursor: pointer;
            transition: background-color 0.2s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-left: 0.5rem;
        }

            button:hover {
                background-color: #2f3f3f;
            }

        .spinner {
            width: 1rem;
            height: 1rem;
            border: 2px solid white;
            border-top: 2px solid transparent;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @@keyframes spin {
            to

        {
            transform: rotate(360deg);
        }

        }

        .result {
            margin-top: 1rem;
            font-size: 0.95rem;
            color: var(--success-color);
        }

        footer {
            margin-top: 2rem;
            font-size: 0.75rem;
            color: var(--muted-color);
        }
    </style>
</head>
<body>
    <div class="auth-card">
        <div class="logo">OneID</div>

        <h1>@Model.OperatorName.</h1>
        <p>Digite o código de autorização do seu Authenticator</p>

        <form method="post" onsubmit="handleSubmit(this)" autocomplete="off">
            <div class="input-container">
                <input type="text" name="TotpCode"
                       placeholder="Digite o código TOTP"
                       maxlength="6"
                       required autocomplete="off" />

                <input type="hidden" name="CorrelationId" value="@Model.CorrelationId" />

                <button type="submit" id="submitBtn">
                    <span id="btnIcon">↑</span>
                </button>
            </div>
        </form>

        @if (Model.ResultMessage is not null)
        {
            <div class="result">@Model.ResultMessage</div>
        }
    </div>

    <script>
        function handleSubmit(form) {
            const btn = document.getElementById('submitBtn');
            const btnIcon = document.getElementById('btnIcon');
            btn.disabled = true;
            btnIcon.innerHTML = '<div class="spinner"></div>';
        }
    </script>
</body>
</html>
